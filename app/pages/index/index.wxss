.other {
  width: 100%;
  height: 40%;
  background: #fff;
}

.today .top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 10px 10px;
  /*background:rgba(0, 0, 0, 0.4) none repeat scroll 0 0 !important;*/
  /* for IE */
  /*filter:alpha(opacity=60);*/
  /* CSS3 standard */
  /*opacity:0.6;*/
}

.today .top .range {
  font-size: 50rpx;
  color: #fff;
  float: left;
}

.today .top .refresh {
  float: right;
  line-height: 27px;
}

.today .top .refresh image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.today .middle {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
}

.today .middle image {
  width: 250rpx;
  height: 250rpx;
}

.today .bottom {
  width: 100%;
  position: absolute;
  color: #fff;
  bottom: 0;
  left: 0;
  padding: 0 5px;
}

.today .bottom .temp {
  font-size: 125rpx;
  float: left;
  text-align: left;
}

.today .bottom .city-day {
  float: right;
  text-align: right;
}

.today .bottom .city-day .day {
  font-size: 70rpx;
}

.today .bottom .city-day .city {
  font-size: 35rpx;
  margin-top: 5px;
}

.other {
  height: 40%;
  width: 100%;
  white-space: nowrap;
}

.other .item {
  width: 33.33%;
  height: 100%;
  display: inline-block;
  border-right: 2rpx solid #edebe9;
  color: #bbb;
}

.other .item .top {
  width: 100%;
  height: 25%;
  font-size: 48rpx;
}

.other .item .middle {
  width: 100%;
  height: 40%;
}

.other .item .middle image {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
}

.other .item .futuretype-text {
  text-align: center;
  height: 10%;
}

.other .item .bottom {
  width: 100%;
  height: 25%;
  font-size: 44rpx;
}
